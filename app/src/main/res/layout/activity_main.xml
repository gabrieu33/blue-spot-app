<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.Main">


    <ImageView
        android:id="@+id/imglogo"
        android:layout_width="262dp"
        android:layout_height="354dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="37dp"
        android:src="@drawable/logonv"
        app:layout_constraintBottom_toTopOf="@+id/btn_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/btn_cadastrar_locador"
            android:layout_width="213dp"
            android:layout_height="55dp"
            android:layout_marginBottom="152dp"
            android:backgroundTint="@color/azul_principal"
            android:padding="15dp"
            android:text="@string/cadastrarLocador"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btn_home"
            android:layout_width="213dp"
            android:layout_height="55dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="@color/azul_principal"
            android:padding="15dp"
            android:text="@string/home"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/btn_cadastrar_locador"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_cadastrar_prop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:backgroundTint="@color/azul_principal"
        android:padding="15dp"
        android:text="@string/cadastrarPropriedade"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_cadastrar_locador"
        app:layout_constraintVertical_bias="0.706" />


</androidx.constraintlayout.widget.ConstraintLayout>