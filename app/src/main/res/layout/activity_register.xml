<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ui.Register"
    android:background="@color/white">

    <TextView
        android:id="@+id/textCadastro"
        android:layout_width="388dp"
        android:layout_height="57dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="46dp"
        android:text="CADASTRO"
        android:textAlignment="center"
        android:textColor="@color/azul_principal"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/nome_et"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/rg_et"
        android:layout_width="287dp"
        android:layout_height="39dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="62dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/azul_principal"
        android:hint="RG"
        android:inputType="text"
        android:padding="8dp"
        android:textColor="@color/azul_principal"
        app:layout_constraintBottom_toTopOf="@+id/profissao_et"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColorHint="@color/azul_principal"
        app:layout_constraintStart_toStartOf="parent" />


    <EditText
        android:id="@+id/nacionalidade_et"
        android:layout_width="287dp"
        android:layout_height="39dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="62dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/azul_principal"
        android:hint="Nacionalidade"
        android:inputType="text"
        android:padding="8dp"
        android:textColorHint="@color/azul_principal"
        android:textColor="@color/azul_principal"
        app:layout_constraintBottom_toTopOf="@+id/endereco_et"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/celular_et"
        android:layout_width="287dp"
        android:layout_height="39dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="62dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/azul_principal"
        android:hint="Celular (99 99999-9999)"
        android:inputType="text"
        android:padding="8dp"
        android:textColorHint="@color/azul_principal"
        android:textColor="@color/azul_principal"
        app:layout_constraintBottom_toTopOf="@+id/senha_et"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/senha_et"
        android:layout_width="287dp"
        android:layout_height="39dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="62dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/azul_principal"
        android:hint="Senha"
        android:inputType="text"
        android:textColorHint="@color/azul_principal"
        android:padding="8dp"
        android:textColor="@color/azul_principal"
        app:layout_constraintBottom_toTopOf="@+id/cpf_et"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/nome_et"
        android:layout_width="287dp"
        android:layout_height="39dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="62dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/azul_principal"
        android:hint="Nome"
        android:inputType="text"
        android:textColorHint="@color/azul_principal"
        android:padding="8dp"
        android:textColor="@color/azul_principal"
        app:layout_constraintBottom_toTopOf="@+id/email_et"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/email_et"
        android:layout_width="287dp"
        android:layout_height="39dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="62dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/azul_principal"
        android:hint="Email"
        android:inputType="text"
        android:padding="8dp"
        android:textColorHint="@color/azul_principal"
        android:textColor="@color/azul_principal"
        app:layout_constraintBottom_toTopOf="@+id/celular_et"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/cpf_et"
        android:layout_width="287dp"
        android:layout_height="39dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="62dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/azul_principal"
        android:hint="CPF"
        android:inputType="text"
        android:padding="8dp"
        android:textColorHint="@color/azul_principal"
        android:textColor="@color/azul_principal"
        app:layout_constraintBottom_toTopOf="@+id/rg_et"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/endereco_et"
        android:layout_width="287dp"
        android:layout_height="39dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="62dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/azul_principal"
        android:hint="Endereço"
        android:inputType="text"
        android:padding="8dp"
        android:textColorHint="@color/azul_principal"
        android:textColor="@color/azul_principal"
        app:layout_constraintBottom_toTopOf="@+id/estado_civil_spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/profissao_et"
        android:layout_width="287dp"
        android:layout_height="39dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="62dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/azul_principal"
        android:hint="Profissão"
        android:inputType="text"
        android:textColorHint="@color/azul_principal"
        android:padding="8dp"
        android:textColor="@color/azul_principal"
        app:layout_constraintBottom_toTopOf="@+id/nacionalidade_et"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_cadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="37dp"
        android:backgroundTint="@color/azul_principal"
        android:text="Cadastrar"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/estado_civil_spinner"
        android:layout_width="287dp"
        android:layout_height="39dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="62dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/azul_principal"
        app:layout_constraintBottom_toTopOf="@+id/btn_cadastrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>